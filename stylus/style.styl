body
    margin 0
    padding: 0 50px
// *
//     outline: 1px solid 
header
    height 100px
    margin auto 0

.header-icon
    margin auto 0 
    display flex     
    p
        text-align center
        flex 3
    
.rigth-icon,i 
    margin auto 10px
    align-items: center
         
.menu-bar
    nav
        display flex
        justify-content center
        align-items: center
    a
        padding-left 20px

.menu-img
    width: 100%
    height 500px
    outline: 1px solid 

.section1
    margin-top: 20px
    height 560px
    padding 50px
.section-title
    display: flex
    align-items: center
    &:before
        width: 7em
        border-top 2px solid
        content ""
        margin-left 10px
        margin-right 10px 

.section1-content
    display: flex

.section-left
    flex: 1
    h2 
        height 200px 
        font-size: 36px   
        letter-spacing: 30px
    p  
        text-align: center
    .section1-btn   
        height: 40px
        width: 250px
        p  
            display: flex
            justify-content: center
            align-items: center

.btn
    text-align: center;
    margin: auto 0;
    border: 1px solid deeppink
    background-color white
    text-align: center
    margin: 0 auto
    box-shadow: 5px 5px 0px 0 rgb(60, 194, 235);
    margin-top: 30px

.section1-img 
    flex: 3 
    width: auto
    height 500px

.section2 
    height 460px

.section2-content  
    display: flex
.section2-subtitle
    margin 0
    flex: 1

.news-menu
    display: flex
    height 200px
    .section2-btn  
         writing-mode vertical-rl
         margin: 0
    li  
        list-style: none
        border-bottom: 2px solid
.section2-content-box
    display: flex
    flex-direction: column
    flex: 2
.mews-box
    display: flex
    flex-direction: column
    margin: 0
    .section2-img
        width: 30px
        height 30px
    .topic 
        h3,p    
            margin: 0




footer 
    height 150px
    display: flex
    background-color: gray  
    text-align: center
    align-items: center
    p  
        flex: 1
    .footer-icon  
        flex: 1
    nav 
        flex: 3
    ul  
        display: flex
    li   
        list-style: none 
        flex: 1
