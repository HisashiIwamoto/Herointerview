                   writing-mode: vertical-tb;
                }

                ul {
                    display: none;
                }
            }

            .section2-content-box {
                margin: 0;
                
            }
        }
    }

    .section3 {
        .section3-content {
            width: 350px;
        }

        .section3-content-box {
            .pick-box {
                width: 347px;
                margin: 0;
                padding: 0;
            }
        }
    }

    .section4 {
        .section4-subtitle {
            .cliant-logo {
                padding-left: 10px;
                justify-content: space-between
                img {
                    width: 100px;
                    margin-right: 10px;
                    margin-top: 10px;
                }
            }
        }
    }

    aside {
        display: block;
        justify-content: center;

        .conpany-detile{
            margin-left: 20px;    
        }

        .aside-icon {
            margin-left 20px
            i {
                align-items: center;
            }
        }
    }

    footer {
        flex-direction: column-reverse;

        ul {
            display: block;
            padding-left 0;
        }
    }
}